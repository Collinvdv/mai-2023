{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set title = data.commonTitle ?? "" %}
{% set description = data.commonDescription ?? "" %} 
{% set link = data.commonLink ?? "" %}
{% set numbers = data.commonNumbers ?? "" %}

{% import "/macros/title" as titleMacro %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4">
    <div class="flex flex-wrap gap-8 lg:gap-16">
        <h2 class="w-full lg:w-3/12">
            {{ titleMacro.decorative(title) }}
        </h2>

        <div class="w-full lg:w-7/12">
            {{ description }}
            <div class="mt-8">
                {% include "/components/link.twig" with { 
                    href : link,
                    text : link.getText(),
                    color : "rose",
                } %}
            </div>
        </div>
    </div>

    {# Numbers #}
    <div class="grid gap-8 grid-cols-2 lg:grid-cols-4 mt-12 lg:mt-20">
        {% for number in numbers.all() %}
            <div class="flex items-center">
                {% if number.commonIcon.one() %}
                    <img class="w-16 h-16 lg:w-20 lg:h-20 mr-4" src="{{ number.commonIcon.one().url }}" alt="{{ number.commonIcon.one().alt }}">
                {% endif %}

                <div class="flex flex-col ">
                    <strong class="text-xl lg:text-2xl">
                        {{ number.commonTitle}}
                    </strong>
                    <span class="text-base lg:text-xl">
                        {{ number.commonSubtitle}}
                    </span>
                </div>
            </div>
        {% endfor %}
    </div>

</div>