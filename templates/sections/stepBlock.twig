{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set title = data.commonTitle ?? "" %}
{% set description = data.commonDescription ?? "" %}
{% set subtitle = data.commonSubtitle ?? "" %}
{% set image = data.commonImage.one() ?? "" %}
{% set imageFirst = data.splitImageFirst ?? "" %}

{# ========================================================================== #}
{# :: Desktop Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4 hidden lg:block">
    {% if imageFirst %}
        <div class="grid grid-cols-12">
            {# Content #}
            <div class="col-start-6 col-span-7 rounded-x-lg py-16 pr-24" style="box-shadow: 0px 0px 30px #00000014;">
                <div class="grid grid-cols-12">
                    {# Row 1 #}
                    <div class="col-span-5 relative">
                        {% if subtitle %}
                            <div class=" rounded-full bg-light-blue flex items-center justify-center  font-medium absolute -left-14 -top-4 h-16 w-16 text-4xl lg:text-5xl lg:h-28 lg:w-28">
                                {{subtitle}}
                            </div>
                        {% endif %}
                    </div>

                    <div class="col-span-7">
                        <h2>
                            {{title}}
                        </h2>
                    </div>

                    {# Row 2 #}
                    <div class="col-start-6 col-span-7">
                        <div class="mt-12">
                            {{description}}
                        </div>
                    </div>
                </div>
            </div>

            {# Image #}
            {% if image %}
                <div class="bg-light-blue col-span-7 bg-cover bg-no-repeat bg-center rounded-x-lg min-h-step-image -mt-64" style="background-image: url('{{image.getUrl({ width: "1200px", quality: 80 })}}')">
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="grid grid-cols-12">
            {# Content #}
            <div class="col-span-7 rounded-x-lg py-16" style="box-shadow: 0px 0px 30px #00000014;">
                <div class="grid grid-cols-12">
                    {# Row 1 #}
                    <div class="col-span-7 relative">
                        {% if subtitle %}
                            <div class="h-28 w-28 rounded-full bg-light-blue flex items-center justify-center text-5xl font-medium absolute -left-14 -top-4">
                                {{subtitle}}
                            </div>
                        {% endif %}
                        <h2 class="pl-24">
                            {{title}}
                        </h2>
                    </div>

                    {# Row 2 #}
                    <div class="col-span-7">
                        <div class="mt-12 pl-24">
                            {{description}}
                        </div>
                    </div>
                </div>
            </div>

            {# Image #}
            {% if image %}
                <div class="bg-light-blue col-start-6 col-span-7 bg-cover bg-no-repeat bg-center rounded-x-lg min-h-step-image -mt-64" style="background-image: url('{{image.getUrl()}}')">
                </div>
            {% endif %}
        </div>
    {% endif %}
</div>

<div class="container mx-auto px-4 lg:hidden">
    {# Content #}
    <div class="rounded-x-lg py-16" style="box-shadow: 0px 0px 30px #00000014;">
        {# Circle #}
        {% if subtitle %}
            <div class="flex justify-center -mt-28">
                <div class="h-24 w-24 rounded-full bg-light-blue flex items-center justify-center text-5xl font-medium -left-14 -top-4">
                    {{subtitle}}
                </div>
            </div>
        {% endif %}

        {# Row 1 #}
        <h2 class="p-8">
            {{title}}
        </h2>

        {# Row 2 #}
        <div class="col-span-7">
            <div class="px-8">
                {{description}}
            </div>
        </div>
    </div>

    {# Image #}
    {% if image %}
        <div class=" bg-cover bg-no-repeat bg-center rounded-x-lg h-80 mt-8 mb-40 lg:min-h-step-image" style="background-image: url('{{image.getUrl({ width: "1200px", quality: 80 })}}')">
        </div>
    {% endif %}
</div>