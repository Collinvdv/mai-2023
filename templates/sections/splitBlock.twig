{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set title = data.commonTitle ?? "" %}
{% set content = data.commonContent ?? "" %}
{% set color = data.commonColor ?? "" %}

{% import "/macros/title" as titleMacro %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4 ">
    <div class="flex flex-wrap gap-6 lg:gap-16">
        <div class="w-full lg:w-3/12">
            <h2 class="mb-2 lg:mb-6">
                {{ titleMacro.decorative(title) }}
            </h2>
        </div>

        <div class="w-full lg:w-7/12">
            {% include "/components/content/index.twig" with { 
                content : content,
                color: color
            } only %}
        </div>
    </div>
</div>
