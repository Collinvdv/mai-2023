{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set title = data.commonTitle ?? "" %}
{% set cards = data.commonCards ?? "" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4">
    {% for card in cards.all() %}
        <div>
            {% include "/components/card.twig" with { 
                card : card
            } %}
        </div>
    {% endfor %}
</div>