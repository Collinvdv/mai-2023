{% set children = data.children() ?? "" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4 -mt-8">
    {% for child in children.all() %}
        <div class="mt-4">
            {% include "/sections/article/" ~ child.type.handle ~".twig" with { data : child } %}
        </div>
    {% endfor %}
</div>
