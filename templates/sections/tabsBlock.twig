{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set tabs = data.commonTabs ?? "" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<div class="container mx-auto px-4 ">
    {# Tabs #}
    {% if tabs %}
        <nav class="mb-8">
            <ol role="list" class="flex justify-center">
                {% for tab in tabs %}
                    <li class="bg-grey flex items-center cursor-pointer">
                        <!-- Completed Step -->
                        <span class="p-2 px-4 text-lg">{{loop.index}}. {{ tab.commonTitle }}</span>

                        <!-- Arrow separator for lg screens and up -->
                        <svg class="w-6 relative z-20" viewBox="0 0 22 40" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.195312 0L21.1953 20L0.195312 40V0Z" class="fill-grey"/>
                        </svg>
                        <div class="flex -ml-6 {% if loop|length == loop.index  %} bg-white {% endif %}">
                            <div class="w-2 h-max bg-white" style="height: auto"></div>
                            <svg class="w-6" viewBox="0 0 22 40" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-left: -1px;">
                                <path d="M0.195312 0L21.1953 20L0.195312 40V0Z" class="fill-white"/>
                            </svg>
                        </div>
                    </li>
                {% endfor %}
            </ol>
        </nav>
    {% endif %}

    {# Content #}
    {% if tabs %}
        {% for tab in tabs %}
            <div class="flex gap-16">
                {% if tab.commonImage.one() %}
                    <div class="bg-cover w-full lg:w-4/12 rounded-tl-10rem" style="background-image: url('{{ tab.commonImage.one().url }}')">
                    </div>
                {% endif %}

                <div class="w-8/12 py-12">
                    <h2 class="mb-6">
                        {{ tab.commonTitle }}
                    </h2>

                    {% include "/components/content/index.twig" with { 
                        content : tab.commonContent    
                    } only %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
