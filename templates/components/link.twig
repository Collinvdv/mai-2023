{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set href = href ?? "" %}
{% set text = text ?? "" %}
{% set color = color ?? "" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<a href="{{ href }}" class="flex items-center">
    <span class="mr-2 border-b-1 border-b-{{color}}">
        {{ text }}
    </span>
    {% include "/components/icons/arrow-right.twig" with { 
        color : "fill-" ~ color
    } %}
</a>