{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set href = href ?? "" %}
{% set text = text ?? "" %}
{% set isSmall = isSmall ?? false %}
{% set color = color ?? "black" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<a href="{{ href }}" class="c-link flex items-center py-1 cursor-pointer">
    <span class="mr-2 border-b-1 border-b-{{color}} {% if isSmall %} text-sm {% endif %}">
        {{ text | raw }}
    </span>
    <div class="c-link__icon transition ease-in-out transform">
        {% include "/components/icons/arrow-right.twig" with { 
            color : "fill-" ~ color
        } %}
    </div>
</a>